<div class="row">
  <% @products.each do |product|%>
 <div class="col-md-6">
     <div class="product">  

     <a href="/products/<%=product.id%>"> 
      <h2><%=product.name %></h2>
     </a>

      <h4>size: <%=product.size %></h4>
      <h4>color: <%=product.color %></h4>
      <h4>price: $<%=product.price %>.99</h4>
      <p><%=product.description %></p>
    </div>   
  </div>
  <div class="col-md-6">
    <div class="thumbnail">
      <a href="/products/<%=product.id%>">
        <img src=<%=product.image%>>
      </a>
    </div>
  </div>
  <% end%>
</div>

<a class="btn btn-default" href="/product/new/">Add Product</a>