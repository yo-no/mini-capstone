<section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>New Product:</h1>
            
            <%= form_tag '/products', method: :post do %>
              <div>
                <%= label_tag :name %>
                <%= text_field_tag :name %>
              </div>
              
              <div>
                <%= label_tag :size %>
                <%= text_field_tag :size %>
              </div>

              <div>
                <%= label_tag :color %>
                <%= text_field_tag :color %>
              </div>

              <div>
                <%= label_tag :price %>
                <%= text_field_tag :price %>
              </div>
              
              <div>
                <%= label_tag :supplier %>
                <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
              </div>
              
              <div>
                <%= label_tag :description %>
                <%= text_area_tag :description, nil, size: "25x10" %>
              </div>

              <%= submit_tag "Save Product" %>
            <% end %>
          </div>
        </div>
      </div>
</section>

